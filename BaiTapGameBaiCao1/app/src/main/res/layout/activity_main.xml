<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C8C3C3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSoTranMay"
            android:text="Win: 0"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textColor="#F80C0C"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Máy"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="right"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:text=""
                android:background="#EE0A0A" />

            <TextView
                android:id="@+id/tvKetQuaMay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Điểm 1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="15">

                <ImageView
                    android:id="@+id/imvMay1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

                <ImageView
                    android:id="@+id/imvMay2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

                <ImageView
                    android:id="@+id/imvMay3"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/imbPlay"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#1952E2"
            android:text="Bắt đầu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="15">

                <ImageView
                    android:id="@+id/imvLa1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

                <ImageView
                    android:id="@+id/imvLa2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

                <ImageView
                    android:id="@+id/imvLa3"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="4" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvKetQuaBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Điểm 2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:text=""
                android:background="#EE0A0A" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"/>
        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bạn"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvSoTranBan"
            android:text="Win: 0"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textColor="#F80C0C"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>