<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tên đăng nhập: "
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edittext_tendangnhap"
            android:hint="không được để trống"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Mật khẩu: "
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edittext_matkhau"
            android:hint="không được để trống"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_luu"
        android:text="Lưu thông tin"
        android:textSize="22sp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_dangnhap"
        android:text="Đăng nhập"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:background="#9F9B9B"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_thoat"
        android:text="Thoát"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:background="#9F9B9B"
        android:layout_gravity="right"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</LinearLayout>