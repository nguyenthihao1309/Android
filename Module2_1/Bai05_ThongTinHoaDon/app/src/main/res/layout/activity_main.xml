<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009688"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Chương trình tính tiền bán sách online"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFE483"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Thông tin hóa đơn:"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Tên khách hàng:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editText_tenKhachHang"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Đoàn Ái Nương"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Số lượng khách:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editText_soLuongSach"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="113"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_vip"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="170dp"
                    android:text="Khách hàng là VIP"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Thành tiền:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView_thanhTien"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:hint="2034000"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_tinhTT"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:text="Tính TT"
                    android:textAllCaps="false"
                    android:textSize="22sp"
                    android:backgroundTint="#E53935"/>

                <Button
                    android:id="@+id/button_tiep"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:text="Tiếp"
                    android:textAllCaps="false"
                    android:textSize="22sp"
                    android:backgroundTint="#E53935"/>

                <Button
                    android:id="@+id/button_thongKe"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:text="Thống kê"
                    android:textAllCaps="false"
                    android:textSize="22sp"
                    android:backgroundTint="#E53935"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFE483"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Thông tin thống kê:"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Tổng số KH:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editText_tongKH"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:enabled="false"
                    android:hint="3"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Tổng số KH là VIP:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editText_tongKHVip"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:enabled="false"
                    android:hint="1"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:text="Tổng doanh thu:"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editText_tongDoanhThu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:enabled="false"
                    android:hint="2184000"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/teal_700" />

            <ImageButton
                android:id="@+id/imageButton_thoat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:background="@drawable/background"
                android:src="@drawable/power_64" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>