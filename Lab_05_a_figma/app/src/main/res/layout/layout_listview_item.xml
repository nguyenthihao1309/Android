<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/border_item"
    android:layout_width="337dp"
    android:layout_height="115dp">


    <ImageView
        android:id="@+id/imageview_item"
        android:src="@drawable/donut_yellow"
        android:layout_margin="10dp"
        android:layout_width="111dp"
        android:layout_height="101dp"/>
    <TextView
        android:id="@+id/textview_ten_item"
        android:layout_toRightOf="@id/imageview_item"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:text="Tasty Donut"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/textview_mota_item"
        android:layout_toRightOf="@id/imageview_item"
        android:layout_below="@id/textview_ten_item"
        android:text="Spicy tasty donut family"
        android:textColor="#8A000000"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/textview_gia"
        android:layout_below="@id/textview_mota_item"
        android:layout_toRightOf="@id/imageview_item"
        android:textSize="20sp"
        android:text="$10.00"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <ImageView
        android:id="@+id/button_plus"
        android:src="@drawable/plus_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="44dp"
        android:layout_height="45dp"/>

</RelativeLayout>