<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_gridview_item"
    android:weightSum="10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_anhsanpham_landscape"
        android:scaleType="centerInside"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/border_radius_image"
        android:src="@drawable/lavie"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:weightSum="10"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_tensanpham_landscape"
            android:layout_width="match_parent"
            android:layout_weight="6.5"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:text="Ten san pham Ten san pham Ten san pham"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_giasanpham_landscape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:gravity="top|left"
            android:paddingLeft="5dp"
            android:textColor="#F20808"
            android:text="gia san pham"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>